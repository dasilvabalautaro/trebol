<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login">
    <ImageView
        app:layout_widthPercent="70%"
        app:layout_heightPercent="5%"
        app:layout_marginTopPercent="22%"
        android:id="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_letter"
        android:contentDescription="@string/description_image"/>
    <EditText
        android:labelFor="@+id/edt_user"
        android:id="@+id/edt_user"
        android:layout_below="@+id/img_logo"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="75%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="10%"
        android:hint="@string/lbl_usuario"
        android:paddingStart="20dp"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:labelFor="@+id/edt_password"
        android:id="@+id/edt_password"
        android:layout_below="@+id/edt_user"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="75%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="4%"
        android:hint="@string/lbl_password"
        android:paddingStart="20dp"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_below="@+id/edt_password"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="53%"
        app:layout_heightPercent="6.5%"
        app:layout_marginTopPercent="6%"
        android:background="@drawable/button_login"/>

    <Button
        android:id="@+id/new_user"
        android:layout_below="@+id/btn_ok"
        android:layout_centerHorizontal="true"
        android:background="@drawable/newuser"
        app:layout_heightPercent="6.5%"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="53%" />

</android.support.percent.PercentRelativeLayout>

