                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/btnMatOut"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/lblMaterialEmpleado"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_out"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_material_empleado"
                android:textColor="@color/colorLblSubTitle"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <ImageButton
                android:id="@+id/btnMatUse"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left1_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_out"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:contentDescription="@string/lbl_logo"
                android:src="@drawable/mas"
                android:background="@null"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mat_use"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/btnMatUse"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/lblFirma"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/middle_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_use"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_firma"
                android:textColor="@color/colorLblSubTitle"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <ImageButton
                android:id="@+id/btnSaveSignature"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/middle_guideline"
                app:layout_constraintRight_toRightOf="@+id/right2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_use"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:contentDescription="@string/lbl_logo"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_save"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btnClearSignature"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/right2_guideline"
                app:layout_constraintRight_toRightOf="@+id/right3_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_use"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:contentDescription="@string/lbl_logo"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_clear"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btnPDF"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/right3_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/rv_mat_use"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:contentDescription="@string/lbl_logo"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_pdf"
                android:background="@null"/>

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/signatureClient"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/btnSaveSignature"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:layout_height="200dp"
                app:penColor="@android:color/black" />

            <EditText
                android:id="@+id/et_client"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/signatureClient"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"
                android:layout_below="@+id/signatureClient"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"
                android:textColor="@color/colorTxt"
                android:background="@drawable/rounded_pass"
                android:scrollbars="vertical"
                tools:ignore="LabelFor"
                android:importantForAutofill="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>



