<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_tab_pdf"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_options">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_guideline"
                app:layout_constraintGuide_percent=".04"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left1_guideline"
                app:layout_constraintGuide_percent=".18"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left2_guideline"
                app:layout_constraintGuide_percent=".50"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left3_guideline"
                app:layout_constraintGuide_percent=".63"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left4_guideline"
                app:layout_constraintGuide_percent=".76"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_guideline"
                app:layout_constraintGuide_percent=".96"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_guideline"
                app:layout_constraintGuide_percent=".05"
                android:orientation="horizontal"/>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintTop_toTopOf="@+id/top_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                android:src="@drawable/logo_claim"
                android:layout_marginTop="10dp"
                android:scaleType="fitStart"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo"
                android:layout_height="wrap_content"
                android:text="@string/lbl_title_veridication"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toTopOf="@+id/top_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left4_guideline"
                android:scaleType="fitEnd"
                android:layout_marginTop="10dp"
                android:src="@drawable/hitachi_pdf"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="@+id/left1_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_height="wrap_content"
                android:text="@string/lbl_client"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left1_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_part"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="@+id/left3_guideline"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:text="@string/lbl_part"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/tv_number_part"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left3_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_serie"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_part"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintRight_toRightOf="@+id/left1_guideline"
                android:layout_height="wrap_content"
                android:text="@string/lbl_serie"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_number_serie"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left1_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_part"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_part"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintRight_toRightOf="@+id/left3_guideline"
                android:text="@string/lbl_fecha"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/tv_value_date"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left3_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_part"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_serie"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_note"
                android:layout_below="@+id/tv_serie"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/tv_tab_verification"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_note"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                android:text="@string/lbl_verification_visual"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                android:id="@+id/tv_test"
                android:layout_width="0dp"
                android:text="@string/lbl_test_visual"
                app:layout_constraintTop_toBottomOf="@+id/tv_note"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <ImageView
                android:id="@+id/iv_verification"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_test"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"/>
            <ImageView
                android:id="@+id/iv_test"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_test"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"/>
            <TextView
                android:id="@+id/tv_tab_maintenance"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_maintenance_visual"
                app:layout_constraintTop_toBottomOf="@+id/iv_test"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/txt_know"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                android:text="@string/lbl_know_visual"
                app:layout_constraintTop_toBottomOf="@+id/iv_test"
                android:layout_marginTop="10dp"
                android:layout_marginStart="3dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <ImageView
                android:id="@+id/iv_maintenance"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/txt_know"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"/>
            <ImageView
                android:id="@+id/iv_know"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/txt_know"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_logo"/>
            <TextView
                android:id="@+id/tv_lbl_description"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintTop_toBottomOf="@+id/iv_know"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_tech_observations"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_observations"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/iv_know"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_tech_observations"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:background="@drawable/rounded_pass"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/tv_signature_technical"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_observations"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_signature_technical"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_signature_client"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                android:text="@string/lbl_signature_client"
                app:layout_constraintTop_toBottomOf="@+id/tv_observations"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/tv_name_technical"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_signature_technical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/tv_name_client"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_signature_technical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size"
                android:textAlignment="textStart"/>

            <ImageView
                android:id="@+id/iv_signature_technical"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_technical"
                android:layout_marginTop="10dp"
                android:layout_height="200dp"
                android:contentDescription="@string/lbl_logo"/>
            <ImageView
                android:id="@+id/iv_signature_client"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_technical"
                app:layout_constraintLeft_toLeftOf="@+id/left2_guideline"
                android:layout_marginTop="10dp"
                android:layout_height="200dp"
                android:contentDescription="@string/lbl_logo"/>

            <TextView
                android:id="@+id/tv_reference"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/left2_guideline"
                app:layout_constraintTop_toBottomOf="@+id/iv_signature_technical"
                android:text="@string/lbl_build_reference"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textAlignment="textStart"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                app:layout_constraintRight_toRightOf="@+id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_reference"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_footer"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textAlignment="center"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</RelativeLayout>
