<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_options">

    <ProgressBar
        android:id="@+id/pb_download"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="5%"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="10%"
        android:indeterminate="true"
        android:visibility="gone"
        android:max="100"/>

    <Button
        android:id="@+id/btn_update_water"
        app:layout_widthPercent="41%"
        app:layout_heightPercent="35%"
        app:layout_marginTopPercent="18%"
        app:layout_marginLeftPercent="8%"
        android:background="@drawable/update_water"/>

    <Button
        android:id="@+id/btn_get"
        app:layout_widthPercent="41%"
        app:layout_heightPercent="35%"
        android:layout_alignTop="@+id/btn_update_water"
        app:layout_marginRightPercent="8%"
        android:layout_alignParentEnd="true"
        android:background="@drawable/get"/>

    <Button
        android:id="@+id/btn_update_thinks"
        android:layout_below="@+id/btn_update_water"
        app:layout_widthPercent="41%"
        app:layout_heightPercent="35%"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="8%"
        android:background="@drawable/update_thinks"/>

    <Button
        android:id="@+id/btn_ots"
        android:layout_alignTop="@+id/btn_update_thinks"
        app:layout_widthPercent="41%"
        app:layout_heightPercent="35%"
        app:layout_marginRightPercent="8%"
        android:layout_alignParentEnd="true"
        android:background="@drawable/see_ots"/>

</android.support.percent.PercentRelativeLayout>
